#include <iostream>
using namespace std;

class Date {
public:
    int d, m, y;

    // Parameterized constructor with default values
    Date(int dd = 26, int mm = 12, int yy = 2022) {
        d = dd;
        m = mm;
        y = yy;
        cout << "Constructor called for " << d << "/" << m << "/" << y << endl;
    }

    // Destructor
    ~Date() {
        cout << "Destructor called for " << d << "/" << m << "/" << y << endl;
    }
};

int main() {
    // Objects created in main
    Date d1, d2, d3, d4;  

    cout << "\nNow creating dates inside loop:\n";
    for (int i = 0; i < 4; i++) {
        Date temp(1 + i, 1, 2025);  // temporary object
    }

    cout << "\nEnd of program\n";
    return 0;
}

Constructor called for 26/12/2022
